<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.splant.reactiongameshowbuzzer2000.TwoPlayerBuzzer"
    android:background="#75A3A3">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:text="Player 2"
            android:id="@+id/player2Button"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:onClick="player2Click"
            android:background="#0099FF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:text="Player 1"
            android:id="@+id/player1Button"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp"
            android:onClick="player1Click"
            android:background="#FF5050" />
    </GridLayout>
</RelativeLayout>
