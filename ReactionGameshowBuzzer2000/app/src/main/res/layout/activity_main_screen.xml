<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:id="@+id/titleTextView"
    android:background="#260059">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gameshow Reaction\nBuzzer 2000"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reaction Timer"
        android:id="@+id/reactionButton"
        android:layout_above="@+id/gameshowButton"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="28dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="reactionButtonClick"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gameshow Buzzer"
        android:id="@+id/gameshowButton"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/statsButton"
        android:layout_alignLeft="@+id/reactionButton"
        android:layout_alignStart="@+id/reactionButton"
        android:layout_alignRight="@+id/reactionButton"
        android:layout_alignEnd="@+id/reactionButton"
        android:onClick="gameshowButtonClick"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/statsButton"
        android:layout_alignLeft="@+id/gameshowButton"
        android:layout_alignStart="@+id/gameshowButton"
        android:layout_alignRight="@+id/gameshowButton"
        android:layout_alignEnd="@+id/gameshowButton"
        android:layout_alignParentBottom="true"
        android:onClick="statsButtonClick" />
</RelativeLayout>
