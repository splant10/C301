<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.splant.reactiongameshowbuzzer2000" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameShowActivity"
            android:label="@string/title_activity_game_show" >
            <intent-filter>
                <action android:name="android.intent.action.reactionButton" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReactionActivity"
            android:label="@string/title_activity_reaction" >
            <intent-filter>
                <action android:name="android.intent.action.gameshowButton" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics" >
            <intent-filter>
                <action android:name="android.intent.action.statsButton" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TwoPlayerBuzzer"
            android:label="@string/title_activity_two_player_buzzer" >
        </activity>
        <activity
            android:name=".ThreePlayerBuzzer"
            android:label="@string/title_activity_three_player_buzzer" >
        </activity>
        <activity
            android:name=".FourPlayerActivity"
            android:label="@string/title_activity_four_player" >
        </activity>
        <activity
            android:name=".FourPlayerBuzzer"
            android:label="@string/title_activity_four_player_buzzer" >
        </activity>
    </application>

</manifest>
